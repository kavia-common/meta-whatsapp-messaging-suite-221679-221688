# Environment variables for React app
# Copy this file to `.env` and update values for your environment.
# Note: Only variables prefixed with REACT_APP_ are exposed to the browser at build time.

# Base API URL used by API clients for REST calls.
# Example: https://api.example.com or http://localhost:4000
REACT_APP_API_BASE=http://localhost:4000

# Public base URL for the backend service (useful if behind a proxy)
# Example: https://backend.example.com or http://localhost:4000
REACT_APP_BACKEND_URL=http://localhost:4000

# Public base URL for the frontend (used in redirects / auth flows)
# Example: https://app.example.com or http://localhost:3000
REACT_APP_FRONTEND_URL=http://localhost:3000

# WebSocket URL for real-time updates (campaign progress, delivery reports).
# Example: wss://api.example.com/ws or ws://localhost:4000/ws
REACT_APP_WS_URL=ws://localhost:4000/ws

# Node environment targeting. Typical values: development | production | test
REACT_APP_NODE_ENV=development

# Disable Next.js telemetry (kept for parity in multi-repo setups; harmless in CRA/Vite).
# Use "1" to disable, "0" to enable.
REACT_APP_NEXT_TELEMETRY_DISABLED=1

# Enable/disable source maps in production builds (string "true"/"false")
REACT_APP_ENABLE_SOURCE_MAPS=true

# Frontend dev server port (for local development)
REACT_APP_PORT=3000

# Whether the app should trust proxy headers (useful in containerized or proxied setups)
# Set "true" if running behind Nginx/Ingress/Load Balancer with forwarded headers
REACT_APP_TRUST_PROXY=false

# Log level for client-side logging: silent | error | warn | info | debug | trace
REACT_APP_LOG_LEVEL=info

# Health check path (frontend will respond on this path)
# Useful for uptime checks or container orchestrators
REACT_APP_HEALTHCHECK_PATH=/healthz

# Feature flags as a JSON string. Example shows enabling a/b test flags.
# Ensure this is valid JSON in a single line.
REACT_APP_FEATURE_FLAGS={"newComposer":true,"showApprovalsV2":false}

# Global experiments toggle. Set "true" to enable experimental UI/flows.
REACT_APP_EXPERIMENTS_ENABLED=false
